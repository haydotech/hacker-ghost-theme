{
  "name": "hacker-ghost-theme",
  "version": "1.0.0",
  "description": "A minimal Ghost theme for developers",
  "engines": {
    "ghost": ">=4.0.0",
    "ghost-api": "v4"
  },
  "config": {
    "custom": {
      "show_developer_profile": {
        "type": "boolean",
        "default": true,
        "label": "Show Developer Profile"
      },
      "header_text": {
        "type": "text",
        "default": "Welcome to My Tech Blog",
        "label": "Header Text"
      }
    }
  },
  "author": {
    "name": "Your Name",
    "email": "your@email.com"
  },
  "license": "MIT"
}