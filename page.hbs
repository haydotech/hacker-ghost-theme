{{!< default}}

<article class="page">
    <header class="page-header">
        <h1 class="page-title">{{title}}</h1>
        {{#if custom_excerpt}}
            <p class="page-excerpt">{{custom_excerpt}}</p>
        {{/if}}
    </header>

    <section class="page-content">
        {{content}}
    </section>

