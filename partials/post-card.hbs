<article class="post-card {{#unless feature_image}}no-image{{/unless}}">
    {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        <img class="post-card-image" 
             src="{{img_url feature_image size="m"}}" 
             alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
    </a>
    {{/if}}
    <div class="post-card-content">
        <a class="post-card-content-link" href="{{url}}">
            <header class="post-card-header">
                {{#if primary_tag}}
                <span class="post-card-tag">{{primary_tag.name}}</span>
                {{/if}}
                <h2 class="post-card-title">{{title}}</h2>
            </header>
            <section class="post-card-excerpt">
                <p>{{excerpt words="24"}}</p>
            </section>
        </a>
        <footer class="post-card-meta">
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
            <span class="reading-time">{{reading_time}}</span>
            {{#if featured}}
            <span class="featured-badge">‚≠ê Featured</span>
            {{/if}}
        </footer>
    </div>
</article>